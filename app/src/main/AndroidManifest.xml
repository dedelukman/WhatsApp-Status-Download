<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />

    <application
        android:name="com.abahstudio.status.Util.YouApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true">
        <activity android:name="com.abahstudio.status.Activity.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.abahstudio.status.Activity.WelcomeActivity" />
        <activity android:name="com.abahstudio.status.Activity.MainActivity" />
        <activity android:name="com.abahstudio.status.Activity.PrivacyPolicy" />
        <activity android:name="com.abahstudio.status.Activity.ShowItem" />
        <activity android:name="com.abahstudio.status.Activity.VideoPlayer" />

        <!-- optional (needed if default theme has no action bar) -->
        <activity
            android:name="com.canhub.cropper.CropImageView"
            android:theme="@style/Base.Theme.AppCompat" />

    </application>

</manifest>